<Window x:Class="Chatter.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatter"
        mc:Ignorable="d"
        Title="Client" MinHeight="600" MinWidth="800" MaxHeight="600" MaxWidth="800" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="ChatLog" Grid.Row="0" Text="" FontSize="16" HorizontalAlignment="Stretch" Height="Auto" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="Auto" IsReadOnly="True"/>
        <TextBox x:Name="MessageBox" Grid.Row="1" Text="Enter a message..." FontSize="16" Background="LightBlue" TextAlignment="Left" HorizontalAlignment="Stretch" Height="Auto" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="Auto"/>
    </Grid>
</Window>
